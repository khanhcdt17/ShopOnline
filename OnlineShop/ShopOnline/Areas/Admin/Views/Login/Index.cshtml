@model  ShopOnline.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Startmin - Bootstrap Admin Theme</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Assest/Admin/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/Assest/Admin/css/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Assest/Admin/css/startmin.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Assest/Admin/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Đăng nhập</h3>
                    </div>
                    <div class="panel-body">
                        @using (@Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "user", @id = "formDemo" }))
                        {
                            <fieldset>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter UserName", @name = "userName", required = "required" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @placeholder = "Enter Password", @name = "passWord", required = "required" })
                                </div>
                                <div class="checkbox">
                                    <label >
                                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "custom-control-input", @id = "customCheck" })
                                        Nhớ
                                    </label>
                                   
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">
                                    Đăng nhập
                                </button>
                                <hr>

                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Assest/Admin/js/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Assest/Admin/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Assest/Admin/js/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Assest/Admin/js/startmin.js"></script>
    <script src="~/Scripts/Check.js"></script>
</body>
</html>

